@using hCMS.Library
@using hCMS.Models
@model hCMS.Models.Users.UserSitesModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ICSOFT CMS</title>
    @Styles.Render("~/bundles/Css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/Js")
    @Scripts.Render("~/bundles/jqueryval")
</head>
<body>

    @using (Html.BeginForm("UserSites", "Users", FormMethod.Post, null))
    {
        @Html.AntiForgeryToken()
        <div class="w3-container" style="height: 390px; overflow: auto">
            @Html.ValidationMessageFor(m => m.SystemMessages, "", new { @class = string.Format("text-danger w3-center w3-container w3-section w3-round w3-padding {0}", Model.SystemStatus == SystemStatus.Success ? "w3-blue" : "w3-red") })
            @if (Model.ListSites.HasValue())
            {
                foreach (var site in Model.ListSites)
                {
                    if (Model.ListUserSites.HasValue() && Model.ListUserSites.Select(e => e).Any(e => e.SiteId == site.SiteId))
                    {
                        <input name="SitesId" id="chkSiteId_@site.SiteId" value="@site.SiteId" class="w3-check" type="checkbox" checked="checked" />
                    }
                    else
                    {
                        <input name="SitesId" id="chkSiteId_@site.SiteId" value="@site.SiteId" class="w3-check" type="checkbox" />
                    }
                    <label for="chkSiteId_@site.SiteId" class="w3-validate"><b>@site.SiteDesc</b></label><br>
                }
            }
            @Html.HiddenFor(m => m.UserId)
        </div>
        <div class="w3-center w3-bottom w3-padding-bottom">
            <button class="w3-btn w3-border w3-round w3-blue" type="submit"><i class="fa fa-floppy-o"></i> <b>Lưu thông tin</b></button>
        </div>
    }

</body>
</html>


@using hCMS.Models
@model hCMS.Models.Sites.SitesEditModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ICSOFT CMS</title>
    @Styles.Render("~/bundles/Css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
</head>
<body>

    @using (Html.BeginForm("Edit", "Sites", FormMethod.Post, null))
    {
        @Html.AntiForgeryToken()
    <div class="w3-container" style="height: 390px; overflow: auto">
        @Html.ValidationMessageFor(m => m.SystemMessages, "", new { @class = string.Format("text-danger w3-center w3-container w3-section w3-round w3-padding {0}", Model.SystemStatus == SystemStatus.Success ? "w3-blue" : "w3-red") })
        <label class="w3-label w3-left w3-padding-top">Tên:</label>
        @Html.TextBoxFor(m => m.SiteName, new { @class = "w3-input w3-border w3-round w3-padding-small" })
        <label class="w3-label w3-left">Mô tả:</label>
        @Html.TextBoxFor(m => m.SiteDesc, new { @class = "w3-input w3-border w3-round w3-padding-small" })
        <label class="w3-label w3-left">Tiêu đề SEO:</label>
        @Html.TextBoxFor(m => m.MetaTitle, new { @class = "w3-input w3-border w3-round w3-padding-small" })
        <label class="w3-label w3-left">Mô tả SEO:</label>
        @Html.TextBoxFor(m => m.MetaDesc, new { @class = "w3-input w3-border w3-round w3-padding-small" })
        <label class="w3-label w3-left">Từ khóa SEO:</label>
        @Html.TextBoxFor(m => m.MetaKeyword, new { @class = "w3-input w3-border w3-round w3-padding-small" })
        <label class="w3-label w3-left">Thẻ Canonical:</label>
        @Html.TextBoxFor(m => m.CanonicalTag, new { @class = "w3-input w3-border w3-round w3-padding-small" })
        <label class="w3-label w3-left">Nội dung thẻ H1:</label>
        @Html.TextBoxFor(m => m.H1Tag, new { @class = "w3-input w3-border w3-round w3-padding-small" })
        @Html.HiddenFor(m => m.SiteId)
    </div>
        <div class="w3-center w3-bottom w3-padding-bottom">
            <button class="w3-btn w3-border w3-round w3-blue" type="submit"><i class="fa fa-floppy-o"></i> <b>Lưu thông tin</b></button>
        </div>
    }
</body>
</html>

@using hCMS.Models.Users
@{ Layout = null;}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ICSOFT CMS</title>
    @Styles.Render("~/bundles/Css")
    @model UserLoginModel
</head>
<body>
    <!--Begin bgwebbody-->
    <div class="bgwebbody">
        <div class="wightfull">
            <!--Begin bgtieudetop-->
            <div class="logoconten">
                <div class="logotop">
                    <a class="tieudehethong">
                        Hệ thống quản trị nội dung
                    </a>
                </div>
                <div class="logotopright">
                    <div id="divDateTime" class="datetime">@DateTime.Now.ToString("dd-MM-yyyy HH:mm")</div>

                </div>
            </div>
            <div class="clear5px"></div>
            <div class="clear5px"></div>
            <div class="clear5px"></div>
            <div class="clear5px"></div>
            <div class="clear5px"></div>
            <div class="clear5px"></div>
            <div class="clear5px"></div>
            <div class="clear5px"></div>
            <div class="clear5px"></div>
            <div class="clear5px"></div>
            <!--End bgtieudetop-->

            <div class="khungcontenpading">
                <div style="width:400px;margin: auto">
                </div>
                <div class="w3-card-4 w3-round-large w3-center" style="width:400px;margin: auto">
                    <header class="w3-container w3-blue">
                        <h3>Đăng nhập hệ thống</h3>
                    </header>
                    <div class="w3-container">
                        @using (Html.BeginForm("Login", "Users", FormMethod.Post, null))
                        {
                            @Html.ValidationSummary(false, "", new { @class = "text-danger w3-center" })
                            @Html.AntiForgeryToken()
                            <p>
                                <label class="w3-label w3-left">Tên truy nhập:</label>
                                @Html.TextBoxFor(m => m.UserName, new { @class = "w3-input w3-border w3-round" })
                            </p>

                            <p>
                                <label class="w3-label w3-left">Mật khẩu:</label>
                                @Html.TextBoxFor(m => m.Password, new { @class = "w3-input w3-border w3-round", type = "password" })
                            </p>
                            @Html.HiddenFor(m=>m.ReturnUrl)
                            <p><button class="w3-btn w3-round-large w3-blue-grey">Đăng nhập</button></p>
                        }
                    </div>
                </div>
            </div>
            <!--Begin noidungconten-->
            <div class="clear5px"></div>
            <div class="clear5px"></div>
        </div>
    </div>
    <!--End bgwebbody-->
</body>
</html>


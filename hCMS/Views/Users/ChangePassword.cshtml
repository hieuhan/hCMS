@using hCMS.Models
@model hCMS.Models.Users.ChangePasswordModel
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("ChangePassword", "Users", FormMethod.Post, null))
{
    @Html.AntiForgeryToken()
<div class="w3-container" style="width: 500px; margin: 0 auto;">
    @Html.ValidationMessageFor(m => m.SystemMessages, "", new { @class = string.Format("text-danger w3-center w3-container w3-section w3-round w3-padding {0}", Model.SystemStatus == SystemStatus.Success ? "w3-blue" : "w3-red") })
    <p>
        <label class="w3-label w3-left">Tên truy nhập:</label>
        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
        @Html.TextBoxFor(m => m.UserName, new { @class = "w3-input w3-border w3-round", @readonly = "readonly" })
    </p>
    <p>
        <label class="w3-label w3-left">Mật khẩu cũ:</label>
        @Html.ValidationMessageFor(m => m.CurrentPassword, "", new { @class = "text-danger" })
        @Html.TextBoxFor(m => m.CurrentPassword, new { @class = "w3-input w3-border w3-round", type = "password" })
    </p>
    <p>
        <label class="w3-label w3-left">Mật khẩu mới:</label>
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        @Html.TextBoxFor(m => m.Password, new { @class = "w3-input w3-border w3-round", type = "password" })
    </p>
    <p>
        <label class="w3-label w3-left">Mật khẩu xác nhận:</label>
        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
        @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "w3-input w3-border w3-round", type = "password" })
    </p>
    <div class="w3-center">
        <input type="submit" value="Lưu thông tin" class="w3-btn w3-border w3-round w3-blue" />
    </div>
</div>
}
@section menudieuhuong{
    <div class="menudieuhuong">
        <div class="menudieuhuong_conen">
            <img src="@Url.Content("~/assets/images/muitendieuhuong.png")" />
            <b>Thay đổi mật khẩu</b>
        </div>
    </div>
}

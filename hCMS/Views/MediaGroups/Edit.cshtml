@using hCMS.Library
@using hCMS.Models
@model hCMS.Models.MediaGroups.MediaGroupsEditModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ICSOFT CMS</title>
    @Styles.Render("~/bundles/Css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
</head>
<body>
    @using (Html.BeginForm("Edit", "MediaGroups", FormMethod.Post, null))
    {
        @Html.AntiForgeryToken()
    <div class="w3-container" style="height: 350px; overflow: auto">
        @Html.ValidationMessageFor(m => m.SystemMessages, "", new { @class = string.Format("text-danger w3-center w3-container w3-section w3-round w3-padding {0}", Model.SystemStatus == SystemStatus.Success ? "w3-blue" : "w3-red") })
        <p>
            <label class="w3-label w3-left">Website:</label>
            @Html.DropDownListFor(m => m.SiteId, new SelectList(Model.ListSites, "SiteId", "SiteDesc", Model.SiteId).AddDefaultOption("...", "0"), new { @class = "w3-input w3-border w3-padding-small" })
        </p>
        <p>
            <label class="w3-label w3-left">Tên:</label>
            @Html.ValidationMessageFor(m => m.MediaGroupName, "", new { @class = "text-danger" })
            @Html.TextBoxFor(m => m.MediaGroupName, new { @class = "w3-input w3-border w3-round" })
        </p>
        <p>
            <label class="w3-label w3-left">Mô tả:</label>
            @Html.ValidationMessageFor(m => m.MediaGroupDesc, "", new { @class = "text-danger" })
            @Html.TextBoxFor(m => m.MediaGroupDesc, new { @class = "w3-input w3-border w3-round" })
        </p>
        <p>
            <label class="w3-label w3-left">MediaGroup cha:</label>
            @Html.DropDownListFor(m => m.ParentGroupId, new SelectList(Model.ListMediaGroups, "MediaGroupId", "MediaGroupDesc", Model.MediaGroupId).AddDefaultOption("...", "0"), new { @class = "w3-input w3-border w3-padding-small" })
        </p>
        @Html.HiddenFor(m => m.MediaGroupId)
        <div class="w3-center w3-bottom w3-padding-bottom">
            <button class="w3-btn w3-border w3-round w3-blue" type="submit"><i class="fa fa-floppy-o"></i> <b>Lưu thông tin</b></button>
        </div>
    </div>
    }
</body>
</html>


@using hCMS.Library
@model hCMS.Models.MediasModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ICSOFT CMS</title>
    @Styles.Render("~/bundles/Css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
</head>
<body>
    @using (Html.BeginForm("Edit", "Medias", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "text-danger w3-center" })
        <div class="w3-container" style="height: 390px; overflow: auto">
            <label class="w3-label w3-left w3-padding-top">Nhóm media:</label>
            @Html.DropDownListFor(m => m.MediaGroupId, new SelectList(Model.ListMediaGroups, "MediaGroupId", "MediaGroupDesc", Model.MediaGroupId).AddDefaultOption("...", "0"), new { @class = "w3-input w3-border w3-padding-small" })

            <label class="w3-label w3-left">Loại media:</label>
            @Html.DropDownListFor(m => m.MediaTypeId, new SelectList(Model.ListDataTypes, "MediaTypeId", "MediaTypeDesc", Model.MediaTypeId).AddDefaultOption("...", "0"), new { @class = "w3-input w3-border w3-padding-small" })

            <label class="w3-label w3-left">Tên:</label>
            @Html.TextBoxFor(m => m.MediaName, new { @class = "w3-input w3-border w3-round w3-padding-small" })

            <label class="w3-label w3-left">Mô tả:</label>
            @Html.TextBoxFor(m => m.MediaDesc, new { @class = "w3-input w3-border w3-round w3-padding-small" })

            <label class="w3-label w3-left">File upload:</label>
            <p class="w3-left" style="width: 100%;">
                <input type="file" name="FileMedia" class="w3-btn w3-round w3-light-grey w3-border w3-padding-small" id="fileToUpload" />
            </p>
            <label class="w3-label w3-left">File Path:</label>
            @Html.TextBoxFor(m => m.FilePath, new { @class = "w3-input w3-border w3-round w3-padding-small" })
            @Html.HiddenFor(m => m.MediaId)
        </div>
        <div class="w3-center w3-bottom w3-padding-bottom">
            <button class="w3-btn w3-border w3-round w3-blue" type="submit">
                <i class="fa fa-floppy-o"></i> <b>Lưu thông tin</b>
            </button>
        </div>
    }
</body>
</html>


@using hCMS.Library
@using hCMS.Models
@model hCMS.Models.Districts.DistrictEditModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ICSOFT CMS</title>
    @Styles.Render("~/bundles/Css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
</head>
<body>

    @using (Html.BeginForm("Edit", "Districts", FormMethod.Post, null))
    {
        @Html.AntiForgeryToken()
    <div class="w3-container" style="height: 390px; overflow: auto">
        @Html.ValidationMessageFor(m => m.SystemMessages, "", new { @class = string.Format("text-danger w3-center w3-container w3-section w3-round w3-padding {0}", Model.SystemStatus == SystemStatus.Success ? "w3-blue" : "w3-red") })
        <p>
            <label class="w3-label w3-left w3-padding-top">Tên:</label>
            @Html.TextBoxFor(m => m.DistrictName, new { @class = "w3-input w3-border w3-round w3-padding-small" })
        </p>
        <p>
            <label class="w3-label w3-left">Mô tả:</label>
            @Html.TextBoxFor(m => m.DistrictDesc, new { @class = "w3-input w3-border w3-round w3-padding-small" })
        </p>
        <p>
            <label class="w3-label w3-left">Quốc gia:</label>
            @Html.DropDownListFor(m => m.CountryId, new SelectList(Model.ListCountries, "CountryId", "CountryDesc", Model.CountryId).AddDefaultOption("...", "0"), new { @class = "w3-input w3-border w3-padding-small", onchange = "this.form.submit()" })
        </p>
        <p>
            <label class="w3-label w3-left">Thành phố:</label>
            @Html.DropDownListFor(m => m.ProvinceId, new SelectList(Model.ListProvinces, "ProvinceId", "ProvinceDesc", Model.ProvinceId).AddDefaultOption("...", "0"), new { @class = "w3-input w3-border w3-padding-small" })
        </p>
        <p>
            <label class="w3-label w3-left">Thứ tự:</label>
            @Html.TextBoxFor(m => m.DisplayOrder, new { @class = "w3-input w3-border w3-round w3-padding-small", type = "number" })
        </p>
        @Html.HiddenFor(m => m.DistrictId)
    </div>
        <div class="w3-center w3-bottom w3-padding-bottom">
            <button class="w3-btn w3-border w3-round w3-blue" type="submit"><i class="fa fa-floppy-o"></i> <b>Lưu thông tin</b></button>
        </div>
    }
</body>
</html>